<div class="d-grid vh-100 main-table">
  <!-- Section 1: Empty -->
  <div class="d-flex align-items-center justify-content-center primary-section">
    <img src="/media/images/longwhite.webp" height="45px">
  </div>
  <!-- Section 2: Collaborative Project -->
  <div class="d-flex align-items-center justify-content-center text-center secondary-section">
    <span class="text-gray-300 montserrat"> A Collaborative Project by <a href="https://royal-stack-alliance.netlify.app/" class="text-blue-500 transition duration-300 hover:text-blue-700 hover:underline" target="_blank" rel="noopener noreferrer">Royal Stack Alliance</a> and <a href="https://atproducts.xyz" class="text-blue-500 transition duration-300 hover:text-blue-700 hover:underline" target="_blank" rel="noopener noreferrer">AT Products LLC</a>. </span>
  </div>
  <!-- Section 3: Navigation -->
  <div class="p-4 secondary-section">
    <p class="display-6 fs-4 text-center">Games</p>
    <slot />
  </div>
  <!-- Section 4: Main Content -->
  <div class="p-4 main-content">
    <div class="container">
      <div class="d-flex justify-content-center">
        <button class="link-game" id="fullScreenBtn" aria-label="Enter fullscreen mode">
        <i class="bi bi-fullscreen" aria-hidden="true"></i>
        <span class="visually-hidden">Fullscreen</span>
      </button>
      </div>
      <div id="game" class="mt-3 rounded-2 ratio ratio-16x9">
        <iframe class="rounded-2 d-block mx-auto" scrolling="no" frameborder="0" allowtransparency="true" src="https://javaspence.github.io/retrobowl/" id="full-screen"></iframe>
      </div>
    </div>
  </div>
</div>