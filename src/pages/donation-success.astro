---
import DefaultBody from '../layouts/DefaultBody.astro';
import '../styles/checkout.css';

// Optional: read donation amount from query string
const url = new URL(Astro.request.url);
const amount = url.searchParams.get("amount");
const amountDisplay = amount ? `$${(Number(amount) / 100).toFixed(2)}` : null;
---

<DefaultBody 
  title="Donation Successful" 
  description="Thank you for supporting our work!" 
  author="Alex Toucan"
>
  <div id="page">
    <div id="main-content" class="full-center">
      <main id="success" class="container text-center mb-4">
        
        <i class="bi bi-check-lg fs-16 text-body-secondary"></i>

        <p class="mt-3 text-body-secondary fs-2">
          Thank you for your donation!
        </p>

        {amountDisplay && (
          <p class="text-body-secondary fs-4">
            Your contribution of <strong>{amountDisplay}</strong> is greatly appreciated.
          </p>
        )}

        <a class="icon-link icon-link-hover fs-5" href="/">
          Return to the Index page
          <i class="bi bi-arrow-right h-100"></i>
        </a>

        <hr class="mx-2 mt-5">

        <p class="figure-caption">
          Your support helps us continue building great tools and resources.
        </p>

        <p class="fw-semibold fs-6 text-muted">
          Â® 2025 <a href="https://atproducts.xyz" target="_blank" rel="noopener noreferrer">AT Products LLC</a>.  
          All rights reserved.
        </p>

      </main>
    </div>
  </div>
</DefaultBody>
