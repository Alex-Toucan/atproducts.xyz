---
import DefaultBody from '../layouts/DefaultBody.astro';

import '../styles/checkout.css';
---

<DefaultBody title="Success" description="We got your submission successfully!" author="Alex Toucan">
  <div id="page">
    <div id="main-content" class="full-center">
      <main id="success" class="container text-center mb-4">
        <i class="bi bi-check-lg fs-16 text-body-secondary"></i>
        <p class="mt-3 text-body-secondary fs-2">Thank you for your payment! We will be contacting you soon.</p>
        <a class="icon-link icon-link-hover fs-5" href="https://atproducts.xyz">Return to the Index page
        <i class="bi bi-arrow-right h-100"></i></a>
        <hr class="mx-2 mt-5">
        <p class="figure-caption">Please allow 24 to 72 hours at a minimum for a response.</p>
      </main>
    </div>
  </div>
</DefaultBody>
