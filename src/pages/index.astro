      document.addEventListener('DOMContentLoaded', function() {
        function activateSectionFromHash() {
          const hash = decodeURIComponent(window.location.hash);
          if (hash && hash.startsWith('#')) {
            const targetId = hash.substring(1) + '-tab';
            const targetButton = document.getElementById(targetId);
            if (targetButton) {
              const tabTrigger = new bootstrap.Tab(targetButton);
              tabTrigger.show();
            }
          }
        }

        const triggerTabList = document.querySelectorAll('button[data-bs-toggle="pill"]');
        triggerTabList.forEach(triggerEl => {
          const tabTrigger = new bootstrap.Tab(triggerEl);

          triggerEl.addEventListener('click', event => {
            event.preventDefault();
            tabTrigger.show();
          });
        });

        window.addEventListener('hashchange', activateSectionFromHash);
        activateSectionFromHash();
      });
