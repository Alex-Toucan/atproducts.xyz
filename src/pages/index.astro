<DefaultBody 
  title="Advertisements" 
  description="Support AT Products LLC with advertisements on our site." 
  keywords="advertisements, support, AT Products LLC" 
  author="AT Products LLC"
>
  <div class="container pt-4">
    <h1 class="text-center fw-bolder">
      Advertisements from <a href="https://atproducts.xyz">AT Products LLC</a>
    </h1>

    <p class="text-center mt-3 fw-semibold fs-6">
      Support us by viewing advertisements on this pageâ€”we keep our other sites ad-free for your convenience.
    </p>

    <!-- ========================= -->
    <!-- 1. TOP BANNER (Adsterra) -->
    <!-- ========================= -->
    <div class="my-4 text-center">
      <script src="https://www.highperformanceformat.com/158bbd11ec1f205737043f4832348e20/invoke.js"></script>
      <div id="container-158bbd11ec1f205737043f4832348e20"></div>
    </div>

    <!-- ========================= -->
    <!-- 2. NATIVE BANNER (Mid-page) -->
    <!-- ========================= -->
    <div class="my-5">
      <script async data-cfasync="false" src="https://pl28664708.effectivegatecpm.com/946bb43adc202e0d28aa4ebab5ae1626/invoke.js"></script>
      <div id="container-946bb43adc202e0d28aa4ebab5ae1626"></div>
    </div>

    <!-- ========================= -->
    <!-- 3. SOCIAL BAR (Bottom area) -->
    <!-- ========================= -->
    <div class="my-5">
      <script src="https://pl28664685.effectivegatecpm.com/a2/a3/c1/a2a3c16e61fc765ade1caed37a5529e9.js"></script>
    </div>

    <!-- ========================= -->
    <!-- 4. SMARTLINK (Hidden) -->
    <!-- ========================= -->
    <a href="https://www.effectivegatecpm.com/yk7i7096x0?key=b546a3d2d696f4c0b57fcc418969f9c9" style="display:none;"></a>

    <!-- ========================= -->
    <!-- 5. POPUNDER (Load last) -->
    <!-- ========================= -->
    <script src="https://pl28664642.effectivegatecpm.com/e5/52/94/e552941806105b5e68df4c3b6ce18ee3.js"></script>

  </div>

  <!-- Bottom Buttons + Footer -->
  <div class="d-flex position-fixed bottom-0 mb-3 justify-content-between p-3 m-3 bottom-section">
    <div class="start-0" id="information-btn">
      <button class="btn btn-secondary py-2 d-flex align-items-center shadow-lg" 
              id="bd-information" 
              type="button" 
              data-bs-toggle="modal" 
              data-bs-target="#informationModal">
        <span><i class="my-1 bi bi-info"></i></span>
        <span class="visually-hidden" id="bd-information-text">Toggle information modal</span>
      </button>
    </div>

    <footer class="text-center tab-link d-flex align-self-center">
      <span>2026 &reg; <a href="https://atproducts.xyz">AT Products LLC</a></span>
    </footer>

    <div class="dropup end-0">
      <button class="btn btn-secondary py-2 dropdown-toggle d-flex align-items-center" 
              id="bd-theme" 
              type="button" 
              aria-expanded="false" 
              data-bs-toggle="dropdown" 
              data-bs-display="static">
        <span class="theme-icon-active">
          <i class="bi bi-sun-fill me-2"></i>
        </span>
        <span class="visually-hidden" id="bd-theme-text">Toggle theme</span>
      </button>

      <ul class="dropdown-menu dropdown-menu-end dropdown-menu-specific" aria-labelledby="bd-theme-text">
        <li>
          <button type="button" class="dropdown-item d-flex align-items-center active" data-bs-theme-value="light">
            <i class="bi bi-sun-fill me-2"></i> Light
          </button>
        </li>
        <li>
          <button type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="dark">
            <i class="bi bi-moon-stars-fill me-2"></i> Dark
          </button>
        </li>
        <li>
          <button type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="auto">
            <i class="bi bi-circle-half me-2"></i> Auto
          </button>
        </li>
      </ul>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="informationModal" tabindex="-1" aria-labelledby="informationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="informationModalLabel">Information & Credits</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <div class="hero hero-main p-md-4 rounded-2 mb-3">
            <div class="bg-dark p-2 rounded-2 d-grid mx-auto" style="width: 217px; filter: drop-shadow(2px 4px 6px black);">
              <span class="text-center fw-bold fs-4 text-white mb-2">Made by:</span>
              <a class="btn btn-dark py-2" href="https://atproducts.xyz" target="_blank" rel="noopener noreferrer">
                <img alt="AT Products LLC" src="https://atproducts.xyz/media/images/longwhite.png" width="175px">
              </a>
            </div>
          </div>

          <h2>Information</h2>
          <div class="text-justify">
            <p class="tab">
              This page is dedicated to supporting <a href="https://atproducts.xyz"><strong>AT Products LLC</strong></a> through advertisements.
            </p>
            <p class="tab">
              Your support directly contributes to the maintenance and development of our platforms.
            </p>
            <p class="tab">
              If you wish to support us further, please consider visiting our <a href="https://atproducts.xyz/paid">Paid Products</a>.
            </p>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

</DefaultBody>
