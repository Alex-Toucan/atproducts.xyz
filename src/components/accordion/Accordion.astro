---
const { parent, additionalClasses, theme } = Astro.props;
const classes = additionalClasses ? `accordion ${additionalClasses}` : 'accordion';
---

<div class={classes} id={parent}>
  {theme ? (
    <div data-bs-theme={theme}>
      <slot name="accordion-content" />
    </div>
  ) : (
    <slot name="accordion-content" />
  )}
</div>
