{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "React packages",
      "matchPackagePatterns": ["^react", "^@types/react", "^react-dom"],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "Astro packages",
      "matchPackagePatterns": ["^astro", "^@astrojs/"],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "Other dependencies",
      "matchPackageNames": ["*"],
      "excludePackagePatterns": ["^react", "^@types/react", "^react-dom", "^astro", "^@astrojs/"],
      "rangeStrategy": "bump"
    }
  ],
  "commitMessageSuffix": "[skip netlify]"
}
