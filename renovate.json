  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "all dependencies",
      "rangeStrategy": "bump",
      "matchPackageNames": [
        "*"
