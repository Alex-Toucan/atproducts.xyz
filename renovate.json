{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "üì¶Ô∏è dependencies"
  ],
  "packageRules": [
    {
      "groupName": "React packages",
      "rangeStrategy": "bump",
      "matchPackageNames": [
        "/^react/",
        "/^@types/react/",
        "/^react-dom/"
      ]
    },
    {
      "groupName": "Astro packages",
      "rangeStrategy": "bump",
      "matchPackageNames": [
        "/^astro/",
        "/^@astrojs//"
      ]
    },
    {
      "groupName": "Bootstrap packages",
      "rangeStrategy": "bump",
      "matchPackageNames": [
        "/^bootstrap/",
        "/^bootstrap-icons/"
      ]
    },
    {
      "groupName": "jQuery packages",
      "rangeStrategy": "bump",
      "matchPackageNames": [
        "/^jquery/",
        "/^@types/jquery/"
      ]
    },
    {
      "groupName": "Other dependencies",
      "matchPackageNames": [
        "*",
        "!/^react/",
        "!/^@types/react/",
        "!/^react-dom/",
        "!/^astro/",
        "!/^@astrojs//",
        "!/^bootstrap/",
        "!/^bootstrap-icons/",
        "!/^jquery/",
        "!/^@types/jquery/"
      ],
      "rangeStrategy": "bump"
    }
  ],
  "commitMessageSuffix": "[skip netlify]"
}
